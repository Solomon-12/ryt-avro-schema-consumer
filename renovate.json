{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranchPatterns": ["main"],
  "enabledManagers": ["custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/(^|/)pom\\.xml$/"],
      "matchStrings": [
        "<sourceDirectory>\\$\\{project\\.basedir\\}/schemas/customer/v(?<currentValue>\\d+)</sourceDirectory>",
        "<sourceDirectory>\\$\\{project\\.basedir\\}/schemas/payment/v(?<currentValue>\\d+)</sourceDirectory>",
        "<sourceDirectory>\\$\\{project\\.basedir\\}/schemas/card/v(?<currentValue>\\d+)</sourceDirectory>"
      ],
      "datasourceTemplate": "custom.kafka-apis",
      "depNameTemplate": "{{{replace '/' '-' depName}}}",
      "versioningTemplate": "regex:^v(?<major>\\d+)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["custom.kafka-apis"],
      "extractVersion": "^v(?<version>\\d+)$",
      "groupName": "Schema Upgrades"
    },
    {
      "matchPackageNames": ["card"],
      "matchCurrentValue": "49",
      "matchCurrentVersion": "v49",
      "allowedVersions": ">=50",
      "enabled": true
    }
  ]
}