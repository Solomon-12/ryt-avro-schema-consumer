{
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["pom.xml$"],
      "matchStrings": [
        "<sourceDirectory>\\s*\\$\\{project\\.basedir\\}/schemas/customer/v(?<currentValue>\\d+)\\s*<\\/sourceDirectory>"
      ],
      "depNameTemplate": "customer-schema",
      "datasourceTemplate": "git",
      "packageNameTemplate": "rytbank/schemas",
      "extractVersionTemplate": "^schemas/customer/v(?<version>\\d+)$",
      "versioningTemplate": "regex:^(?<major>\\d+)$"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["customer-schema"],
      "allowedVersions": "/^\\d+$/"
    }
  ]
}